{
  "agent": {
    "metrics_collection_interval": 60,
    "run_as_user": "cwagent"
  },
  "metrics": {
    "namespace": "{{ cloudwatch_namespace | default('3TierApp/Week3') }}",
    "metrics_collected": {
      "cpu": {
        "measurement": [
          "cpu_usage_idle",
          "cpu_usage_iowait",
          "cpu_usage_user",
          "cpu_usage_system"
        ],
        "metrics_collection_interval": 60,
        "totalcpu": false
      },
      "disk": {
        "measurement": [
          "used_percent"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ]
      },
      "diskio": {
        "measurement": [
          "io_time",
          "read_bytes",
          "write_bytes",
          "reads",
          "writes"
        ],
        "metrics_collection_interval": 60,
        "resources": [
          "*"
        ]
      },
      "mem": {
        "measurement": [
          "mem_used_percent",
          "mem_available_percent"
        ],
        "metrics_collection_interval": 60
      },
      "netstat": {
        "measurement": [
          "tcp_established",
          "tcp_time_wait"
        ],
        "metrics_collection_interval": 60
      },
      "swap": {
        "measurement": [
          "swap_used_percent"
        ],
        "metrics_collection_interval": 60
      }
    }
  },
  "logs": {
    "logs_collected": {
      "files": {
        "collect_list": [
          {
            "file_path": "/var/log/nginx/3tier-app-access.log",
            "log_group_name": "{{ cloudwatch_log_group | default('/aws/ec2/3tier-app') }}/nginx/access",
            "log_stream_name": "{instance_id}-nginx-access",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/nginx/3tier-app-error.log",
            "log_group_name": "{{ cloudwatch_log_group | default('/aws/ec2/3tier-app') }}/nginx/error",
            "log_stream_name": "{instance_id}-nginx-error",
            "timezone": "UTC"
          },
          {
            "file_path": "/home/ubuntu/.pm2/logs/formapp-api-out.log",
            "log_group_name": "{{ cloudwatch_log_group | default('/aws/ec2/3tier-app') }}/application/stdout",
            "log_stream_name": "{instance_id}-app-stdout",
            "timezone": "UTC"
          },
          {
            "file_path": "/home/ubuntu/.pm2/logs/formapp-api-error.log",
            "log_group_name": "{{ cloudwatch_log_group | default('/aws/ec2/3tier-app') }}/application/stderr",
            "log_stream_name": "{instance_id}-app-stderr",
            "timezone": "UTC"
          },
          {
            "file_path": "/var/log/syslog",
            "log_group_name": "{{ cloudwatch_log_group | default('/aws/ec2/3tier-app') }}/system/syslog",
            "log_stream_name": "{instance_id}-syslog",
            "timezone": "UTC"
          }
        ]
      }
    }
  }
}
