# =============================================================================
# 3-Tier Application Environment Configuration
# =============================================================================
# This file contains all configurable variables for the containerized application
# Suitable for both local development and AWS ECS/RDS deployment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION (RDS Compatible)
# =============================================================================
# For local development with Docker Compose, use 'db' as hostname
# For AWS ECS with RDS, use the RDS endpoint
DB_HOST=db
DB_PORT=3306
DB_NAME=formapp
DB_USER=root
DB_PASSWORD=secure_password_123

# RDS Configuration (uncomment and modify for AWS deployment)
# DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
# DB_PORT=3306
# DB_NAME=formapp
# DB_USER=admin
# DB_PASSWORD=your-secure-rds-password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# =============================================================================
# AWS ECS SPECIFIC CONFIGURATION
# =============================================================================
# Health check endpoint
HEALTH_CHECK_PATH=/health

# Container resource limits (for ECS task definition)
CPU_UNITS=256
MEMORY_MB=512

# =============================================================================
# NGINX CONFIGURATION
# =============================================================================
NGINX_PORT=80
API_UPSTREAM=api:3000

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment for local development
# DB_HOST=localhost
# NODE_ENV=development
# LOG_LEVEL=debug
